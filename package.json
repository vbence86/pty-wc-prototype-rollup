{
  "name": "pty-wc-template-rollup",
  "version": "1.14.1",
  "main": "dist/bundle.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vbence86/pty-wc-template-rollup.git"
  },
  "bugs": {
    "url": "https://github.com/vbence86/pty-wc-template-rollup/issues"
  },
  "homepage": "https://github.com/vbence86/pty-wc-template-rollup#readme",
  "scripts": {
    "build": "node ./scripts/build.js",
    "lint": "eslint --ext .js --ext .svelte src/",
    "postinstall": "node scripts/postinstall.js",
    "start": "npm run storybook",
    "storybook": "npm run postinstall && start-storybook -s ./.storybook/static -p 8086",
    "test": "jest src && npm run build && bundlesize",
    "test:watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@storybook/addon-storyshots": "^5.3.19",
    "@storybook/svelte": "^5.3.19",
    "@testing-library/svelte": "^3.0.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "bundlesize": "^0.18.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^25.4.3",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "25.0.0",
    "node-sass": "^4.14.1",
    "pty-themes": "^1.1.6",
    "rollup": "^1.20.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-inject-process-env": "^1.2.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.2.2",
    "rollup-plugin-terser": "^5.1.2",
    "shelljs": "^0.8.4",
    "svelte-jester": "^1.0.6",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^3.7.4"
  },
  "dependencies": {
    "svelte": "^3.22.3",
    "@storybook/addon-actions": "^5.3.19"
  },
  "jest": {
    "bail": false,
    "moduleFileExtensions": [
      "js",
      "json",
      "svelte"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.stories\\.[jt]sx?$": "<rootDir>node_modules/@storybook/addon-storyshots/injectFileName",
      "^.+\\.svelte$": "svelte-jester"
    },
    "verbose": true
  }
}
